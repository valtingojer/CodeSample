
<table align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;border-color:transparent;font-family:'Inter',sans-serif;background-color:#EFF0F4;">
    <tr>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td>

            {{#if HasBody}}

                <table align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;border-color:transparent;">

                    {{#if IncidentDate}}
                        <tr border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;border-color:transparent;">
                            <td style="text-align: left;">
                                <p style="font-family:'Inter',sans-serif;color:#9b9b9b;font-size:12px;line-height:12px;margin-left:1px">{{IncidentDate}}</p>
                            </td>
                        </tr>
                    {{/if}}
                    {{#if BodyTitle}}
                        <tr border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;border-color:transparent;">
                            <td style="text-align: left;padding-left:0;margin-left">
                                <h1 style="font-family:'Inter',sans-serif;color:#2C2C2C;font-size:36px;font-weight:bold;margin-left:-1px">{{BodyTitle}}</h1>
                            </td>
                        </tr>
                    {{/if}}
                    {{#if BodySubtitle}}
                        <tr border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;border-color:transparent;">
                            <td style="text-align: left;">
                                <h2 style="font-family:'Inter',sans-serif;color:#2C2C2C;font-size:22px;font-weight:bold;">{{BodySubtitle}}</h2>
                            </td>
                        </tr>
                    {{/if}}
                    {{#if BodyText}}
                        <tr border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;border-color:transparent;">
                            <td style="text-align: left;">
                                <p style="font-family:'Inter',sans-serif;color:#2C2C2C;font-size:14px;">{{BodyText}}</p>
                            </td>
                        </tr>
                    {{/if}}
                    <tr border="0" cellpadding="0" cellspacing="0" style="border-collapse:collapse;border-color:transparent;"><td style="height:100px;"></td></tr>
                </table>

            {{/if}}

        </td>
        <td></td>
    </tr>
    <tr>
        <td></td>
        <td></td>
        <td></td>
    </tr>
</table>
